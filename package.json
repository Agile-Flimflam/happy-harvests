{
  "name": "happy-harvests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "next dev --turbopack -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit --pretty",
    "test": "jest",
    "db:start": "supabase start",
    "db:reset": "supabase db reset --yes",
    "db:migrate": "supabase migration up",
    "db:validate": "supabase start && pnpm run db:reset",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "playwright:install": "playwright install --with-deps",
    "analyze": "ANALYZE=true next build",
    "gemini:review": "tsx scripts/gemini/review.ts",
    "gemini:describe": "tsx scripts/gemini/describe-pr.ts",
    "gemini:scaffold": "tsx scripts/gemini/scaffold-tests.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.0",
    "@tanstack/react-table": "^8.21.3",
    "@vvo/tzdb": "^6.198.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "fraction.js": "^5.3.4",
    "googleapis": "^167.0.0",
    "lucide-react": "^0.555.0",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-day-picker": "^9.11.3",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "supabase": "^2.65.3",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "usa-states": "^0.0.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@google/generative-ai": "^0.24.1",
    "@next/bundle-analyzer": "16.0.7",
    "@octokit/rest": "^22.0.1",
    "@playwright/test": "^1.57.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "secretlint": "^11.2.5",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests",
      "secretlint"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "secretlint"
    ],
    "*.{toml,env,sh,bash,txt}": [
      "secretlint"
    ],
    ".*rc": [
      "secretlint"
    ],
    ".env*": [
      "secretlint"
    ],
    "Dockerfile*": [
      "secretlint"
    ]
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.4.5",
      "node-domexception": "^2.0.2",
      "jsdom": "^23.0.0",
      "js-yaml@^4.0.0": "^4.1.1"
    },
    "allowedDeprecatedVersions": {
      "node-domexception": "^2.0.2"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp",
      "supabase",
      "unrs-resolver"
    ]
  }
}
